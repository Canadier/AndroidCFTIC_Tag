<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades.MostrarRecords">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:text="@string/titulo_record_nombre"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:onClick="ordenarPorNombreYTiempo"
        android:layout_weight="65"
        android:gravity="center|center_vertical"/>
    <TextView
        android:textSize="15sp"
        android:text="@string/titulo_record_tiempo"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:layout_weight="15"/>
    <TextView
        android:textSize="15sp"
        android:text="@string/titulo_record_foto"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|center_vertical"
        android:layout_weight="20"/>
</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/myrecycview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</ScrollView>
</LinearLayout>